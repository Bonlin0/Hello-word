<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/show_all_group_avatar_imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/group_avatar" />

    <TextView
        android:id="@+id/group_name_show_all_group_texView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="你的小组的名字"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/show_all_group_avatar_imageView"
        app:layout_constraintStart_toEndOf="@+id/show_all_group_avatar_imageView"
        app:layout_constraintTop_toTopOf="@+id/show_all_group_avatar_imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
