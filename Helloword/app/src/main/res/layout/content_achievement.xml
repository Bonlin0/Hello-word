            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_6" />

        <TextView
            android:id="@+id/achivement_subtitle_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="打卡14天。"
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_7" />

        <TextView
            android:id="@+id/achivement_subtitle_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="段位分大于1800."
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_8" />

        <TextView
            android:id="@+id/achivement_subtitle_9"
