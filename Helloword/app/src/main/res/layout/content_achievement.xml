        <TextView
            android:id="@+id/achivement_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="不屈黑铁！"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_4" />

        <TextView
            android:id="@+id/achivement_text_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="早起的鸟儿有虫吃"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_5" />

        <TextView
            android:id="@+id/achivement_text_6"
