            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_9" />

        <TextView
            android:id="@+id/achivement_text_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="命悬一线"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_10" />

        <TextView
            android:id="@+id/achivement_subtitle_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="完成第一天的打卡。"
            app:layout_constraintStart_toStartOf="@+id/achivement_text_0"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_0" />

        <TextView
            android:id="@+id/achivement_subtitle_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="完成一本词书。"
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_1" />

        <TextView
            android:id="@+id/achivement_subtitle_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="第一次使用PK Game。"
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_2" />

        <TextView
            android:id="@+id/achivement_subtitle_3"
            android:layout_width="wrap_content"
