            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="称号等级达到1."
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_9" />

        <TextView
            android:id="@+id/achivement_subtitle_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="以一个单词的优势赢得PKGame。"
            app:layout_constraintStart_toStartOf="@+id/achivement_text_1"
            app:layout_constraintTop_toBottomOf="@+id/achivement_text_10" />

        <ImageView
            android:id="@+id/achivement_img_0"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_off" />

        <ImageView
            android:id="@+id/achivement_img_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
