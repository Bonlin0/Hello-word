    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AchievementActivity"
    tools:showIn="@layout/activity_achievement">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/achivement_text_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Baby Steps"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_0"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_0" />

        <TextView
            android:id="@+id/achivement_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="有始有终"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_1" />

        <TextView
            android:id="@+id/achivement_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Hey, Nice to meet you!."
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/achivement_img_1"
            app:layout_constraintTop_toTopOf="@+id/achivement_img_2" />

        <TextView
            android:id="@+id/achivement_text_3"
